@model prjTravelPlatformV3.Areas.Employee.ViewModels.Discount.CouponViewModel


<div class="modal-header">
    <h5 class="modal-title" id="exampleModalLabel">@ViewBag.title</h5>
    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
</div>

<div id="divModalContent" class="modal-body">
    <form  id="@ViewBag.formId">
        @Html.AntiForgeryToken()

        <input asp-for="CouponId" style="display:none" />

        <div class="mb-3">
            <label asp-for="CouponCode" class="form-label">@Html.DisplayNameFor(h=>h.CouponCode)</label>
            <input asp-for="CouponCode" id="couponCode" class="form-control" />
            <label class="checkbox-inline">
                <input type="checkbox" id="autoGenerateCheckbox" name="autoGenerateCheckbox" value="option1"> 自動生成十碼折扣碼
            </label>

            <span asp-validation-for="CouponCode" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="CouponName" class="form-label">@Html.DisplayNameFor(h=>h.CouponName)</label>
            <input asp-for="CouponName" class="form-control">
            <span asp-validation-for="CouponName" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Amount" class="form-label">@Html.DisplayNameFor(h=>h.Amount)</label>
            <input asp-for="Amount" class="form-control">
            <span asp-validation-for="Amount" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Discount" class="form-label">@Html.DisplayNameFor(h=>h.Discount)</label>
            <input asp-for="Discount" class="form-control">
            <span asp-validation-for="Discount" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="ProductType" class="form-label">@Html.DisplayNameFor(h=>h.ProductType)</label>
            @* <input asp-for="ProductType" class="form-control"> *@
            <select asp-for="ProductType" name="choice">
                <option value="旅遊">旅遊 </option>
                <option value="住宿">住宿</option>
                <option value="機票">機票</option>
                <option value="租車">租車</option>
                <option value="伴手禮">伴手禮</option>
                <option value="代辦">代辦</option>
            </select>
            <span asp-validation-for="ProductType" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Rule" class="form-label">@Html.DisplayNameFor(h=>h.Rule)</label>
            @* <input asp-for="Rule" class="form-control">
            <span asp-validation-for="Rule" class="text-danger"></span> *@
            <select asp-for="Rule" name="choice">
                <option value="指定品">指定品 </option>
                <option value="季節">季節</option>
            </select>
        </div>
        <div class="mb-3">
            <label asp-for="Enable" class="form-label">@Html.DisplayNameFor(h=>h.Enable)</label>
            @* <input asp-for="Enable" class="form-control"> *@
            <input asp-for="Enable" type="radio" name="option" value="True" /> 啟用
            <input asp-for="Enable" type="radio" name="option" value="False"> 未啟用
            <span asp-validation-for="Enable" class="text-danger"></span>
        </div>
        <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">關閉</button>
            <button type="button" class="btn btn-primary" id="btnSave" onclick='sendFetchRequest("@ViewBag.formId")'>儲存</button>
        </div>
    </form>
</div>






@section Scripts{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script src="~/js/discount/couponcode.js"></script>
    <script>





    </script>
}
